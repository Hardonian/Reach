{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./packages/*", "./apps/arcade/src/*", "./apps/docs/*"],
      "@zeo/core": ["./src/core/shim.ts"],
      "@zeo/contracts": ["./sdk/ts/src/index.ts"],
      "@zeo/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "test/**/*", "scripts/**/*"]
}
