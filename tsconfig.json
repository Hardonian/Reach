{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@zeo/core": ["./packages/core/src/index.ts"],
      "@zeo/contracts": ["./packages/contracts/src/index.ts"],
      "@zeo/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "test/**/*"]
}
