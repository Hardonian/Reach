{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://reach.dev/protocol/v1/index.schema.json",
  "title": "Marketplace Index",
  "type": "object",
  "required": ["packages"],
  "properties": {
    "packages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "versions"],
        "properties": {
          "id": {"type": "string", "minLength": 1},
          "versions": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["version", "sha256", "manifest_url", "bundle_url", "signature_key_id", "risk_level", "tier_required"],
              "properties": {
                "version": {"type": "string", "minLength": 1},
                "sha256": {"type": "string", "pattern": "^[a-fA-F0-9]{64}$"},
                "manifest_url": {"type": "string", "minLength": 1},
                "bundle_url": {"type": "string", "minLength": 1},
                "signature_url": {"type": "string", "minLength": 1},
                "signature_key_id": {"type": "string", "minLength": 1},
                "risk_level": {"type": "string", "enum": ["low", "medium", "high", "strict", "experimental"]},
                "tier_required": {"type": "string", "minLength": 1}
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
