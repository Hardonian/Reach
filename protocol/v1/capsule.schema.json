{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://reach.dev/protocol/v1/capsule.schema.json",
  "title": "Capsule",
  "type": "object",
  "required": [
    "schemaVersion",
    "capsuleId",
    "session",
    "spawn",
    "syncState",
    "updatedAt"
  ],
  "properties": {
    "schemaVersion": { "const": "1.0.0" },
    "capsuleId": { "type": "string", "minLength": 1 },
    "session": { "$ref": "session.schema.json" },
    "spawn": { "$ref": "spawn.schema.json" },
    "connectors": {
      "type": "array",
      "items": { "$ref": "connector.schema.json" }
    },
    "syncState": {
      "type": "string",
      "enum": ["in_sync", "ahead", "behind", "conflict"]
    },
    "updatedAt": { "type": "string", "format": "date-time" }
  },
  "additionalProperties": false
}
