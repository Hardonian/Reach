{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://reach.dev/protocol/integrations/integration-manifest.schema.json",
  "title": "Reach Integration Manifest",
  "type": "object",
  "required": ["schemaVersion", "provider", "events"],
  "properties": {
    "schemaVersion": { "const": "1.0.0" },
    "provider": {
      "type": "string",
      "enum": ["slack", "google", "github", "jira"]
    },
    "events": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["externalType", "internalTrigger", "policyGate"],
        "properties": {
          "externalType": { "type": "string" },
          "internalTrigger": {
            "type": "string",
            "enum": ["run.start", "approval", "task.event", "schedule"]
          },
          "policyGate": { "type": "boolean" },
          "workflow": { "type": "string" },
          "description": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
