{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://reach/protocol/schemas/toolcall.schema.json",
  "$defs": {
    "ToolCall": {
      "type": "object",
      "properties": {
        "step_id": {"type": "string"},
        "tool_name": {"type": "string"},
        "input": {}
      },
      "required": ["step_id", "tool_name", "input"],
      "additionalProperties": false
    },
    "ToolResult": {
      "type": "object",
      "properties": {
        "step_id": {"type": "string"},
        "tool_name": {"type": "string"},
        "output": {},
        "success": {"type": "boolean"},
        "error": {"type": ["string", "null"]}
      },
      "required": ["step_id", "tool_name", "output", "success", "error"],
      "additionalProperties": false
    }
  },
  "type": "object"
}
