{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://reach.dev/protocol/schemas/toolcall.schema.json",
  "title": "Reach Tool Call v0",
  "$defs": {
    "Capability": {
      "type": "object",
      "oneOf": [
        {
          "properties": {
            "capability": {
              "const": "tool_use"
            },
            "value": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                }
              },
              "required": ["name"],
              "additionalProperties": false
            }
          },
          "required": ["capability", "value"],
          "additionalProperties": false
        },
        {
          "properties": {
            "capability": {
              "const": "emit_artifact"
            },
            "value": {
              "type": "null"
            }
          },
          "required": ["capability", "value"],
          "additionalProperties": false
        }
      ]
    },
    "ToolCall": {
      "type": "object",
      "properties": {
        "step_id": {
          "type": "string"
        },
        "tool_name": {
          "type": "string"
        },
        "required_capabilities": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Capability"
          }
        },
        "input": {}
      },
      "required": ["step_id", "tool_name", "required_capabilities", "input"],
      "additionalProperties": false
    },
    "ToolResult": {
      "type": "object",
      "properties": {
        "step_id": {
          "type": "string"
        },
        "tool_name": {
          "type": "string"
        },
        "output": {},
        "success": {
          "type": "boolean"
        },
        "error": {
          "type": ["string", "null"]
        }
      },
      "required": ["step_id", "tool_name", "output", "success", "error"],
      "additionalProperties": false
    }
  },
  "type": "object",
  "oneOf": [
    {
      "$ref": "#/$defs/ToolCall"
    },
    {
      "$ref": "#/$defs/ToolResult"
    }
  ]
}
