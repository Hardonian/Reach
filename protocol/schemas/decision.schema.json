{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://reach.sh/schemas/decision.json",
  "title": "Decision Report Schema",
  "description": "Schema for Decision evaluation results in the Reach system",
  "type": "object",
  "required": ["id", "junctionId", "timestamp", "actions", "rankedActions", "trace"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique decision identifier (UUID)"
    },
    "junctionId": {
      "type": "string",
      "description": "ID of the junction that triggered this decision"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of decision evaluation"
    },
    "engine": {
      "type": "string",
      "enum": ["typescript", "wasm"],
      "description": "Decision engine used"
    },
    "actions": {
      "type": "array",
      "description": "All candidate actions evaluated",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "riskScore": { "type": "number" },
          "estimatedImpact": { "type": "number" },
          "prerequisites": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "rankedActions": {
      "type": "array",
      "description": "Actions sorted by score (best first)",
      "items": { "type": "string" }
    },
    "regretAnalysis": {
      "type": "object",
      "description": "Regret analysis for each action",
      "properties": {
        "actionId": { "type": "string" },
        "regretScore": { "type": "number" },
        "worstCaseScenario": { "type": "string" }
      }
    },
    "trace": {
      "type": "array",
      "description": "Decision evaluation trace",
      "items": {
        "type": "object",
        "properties": {
          "step": { "type": "integer" },
          "operation": { "type": "string" },
          "input": { "type": "object" },
          "output": { "type": "object" }
        }
      }
    },
    "fingerprint": {
      "type": "string",
      "description": "SHA-256 hash of decision for reproducibility"
    }
  }
}
