{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://reach.sh/schemas/event.json",
  "title": "Event Schema",
  "description": "Schema for Events in the Reach system",
  "type": "object",
  "required": ["id", "type", "timestamp", "workspaceId"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique event identifier (UUID)"
    },
    "type": {
      "type": "string",
      "enum": [
        "WORKSPACE_CREATED",
        "WORKSPACE_UPDATED",
        "WORKSPACE_DELETED",
        "JUNCTION_DETECTED",
        "DECISION_EVALUATED",
        "ACTION_PLANNED",
        "ACTION_APPROVED",
        "ACTION_EXECUTED",
        "ACTION_ROLLED_BACK",
        "ARTIFACT_CREATED",
        "ARTIFACT_DELETED",
        "CAPSULE_CREATED",
        "CAPSULE_VERIFIED",
        "BUNDLE_CREATED",
        "BUNDLE_VERIFIED",
        "POLICY_EVALUATED",
        "SYSTEM_CHECK",
        "REPLAY_STARTED",
        "REPLAY_COMPLETED"
      ],
      "description": "Type of event"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of event"
    },
    "workspaceId": {
      "type": "string",
      "description": "Workspace this event belongs to"
    },
    "runId": {
      "type": "string",
      "description": "Run ID this event is part of"
    },
    "payload": {
      "type": "object",
      "description": "Event-specific payload data"
    },
    "source": {
      "type": "string",
      "description": "Source of the event (cli, api, engine, etc)"
    },
    "userId": {
      "type": "string",
      "description": "User who triggered this event (if applicable)"
    },
    "metadata": {
      "type": "object",
      "description": "Additional event metadata",
      "properties": {
        "correlationId": { "type": "string" },
        "causationId": { "type": "string" },
        "tags": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}
