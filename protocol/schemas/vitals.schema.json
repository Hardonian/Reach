{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://reach.sh/schemas/vitals.json",
  "title": "Vitals Schema",
  "description": "Schema for System Vitals and Metrics in the Reach system",
  "type": "object",
  "required": ["timestamp", "metrics"],
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of vitals snapshot"
    },
    "workspaceId": {
      "type": "string",
      "description": "Workspace these vitals belong to"
    },
    "runId": {
      "type": "string",
      "description": "Run ID for this vitals snapshot"
    },
    "metrics": {
      "type": "object",
      "description": "System metrics",
      "properties": {
        "eventsProcessed": {
          "type": "integer",
          "description": "Total events processed in this run"
        },
        "junctionsDetected": {
          "type": "integer",
          "description": "Total junctions detected"
        },
        "decisionsEvaluated": {
          "type": "integer",
          "description": "Total decisions evaluated"
        },
        "actionsExecuted": {
          "type": "integer",
          "description": "Total actions executed"
        },
        "actionsSucceeded": {
          "type": "integer",
          "description": "Total actions that succeeded"
        },
        "actionsFailed": {
          "type": "integer",
          "description": "Total actions that failed"
        },
        "averageDecisionTime": {
          "type": "number",
          "description": "Average decision evaluation time in milliseconds"
        },
        "averageActionTime": {
          "type": "number",
          "description": "Average action execution time in milliseconds"
        },
        "policyEvaluations": {
          "type": "integer",
          "description": "Total policy evaluations"
        },
        "policyDenials": {
          "type": "integer",
          "description": "Total policy denials"
        }
      }
    },
    "trends": {
      "type": "array",
      "description": "Historical trend data points",
      "items": {
        "type": "object",
        "properties": {
          "period": { "type": "string" },
          "eventsProcessed": { "type": "integer" },
          "decisionsEvaluated": { "type": "integer" },
          "actionsExecuted": { "type": "integer" },
          "successRate": { "type": "number" }
        }
      }
    },
    "fingerprint": {
      "type": "string",
      "description": "SHA-256 hash of vitals for reproducibility"
    }
  }
}
