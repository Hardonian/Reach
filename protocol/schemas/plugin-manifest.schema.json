{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://reach.dev/schemas/plugin-manifest.schema.json",
  "type": "object",
  "required": ["id", "version", "entrypoint", "signature"],
  "properties": {
    "id": { "type": "string" },
    "version": { "type": "string" },
    "entrypoint": { "type": "string" },
    "signature": {
      "type": "object",
      "required": ["key_id", "algorithm", "signature"],
      "properties": {
        "key_id": { "type": "string" },
        "algorithm": { "type": "string", "enum": ["rsa-sha256"] },
        "signature": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": true
}
