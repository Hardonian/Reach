{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://reach.dev/protocol/ide/approval_request.schema.json",
  "title": "Approval Request",
  "type": "object",
  "additionalProperties": false,
  "required": ["run_id", "tool", "capabilities", "reason"],
  "properties": {
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "tool": {
      "type": "string",
      "minLength": 1
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "reason": {
      "type": "string",
      "minLength": 1
    }
  }
}
