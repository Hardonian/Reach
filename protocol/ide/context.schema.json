{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://reach.dev/protocol/ide/context.schema.json",
  "title": "IDE Context",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "workspace_root",
    "open_files",
    "active_file",
    "selection_range"
  ],
  "properties": {
    "workspace_root": {
      "type": "string",
      "minLength": 1
    },
    "open_files": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "active_file": {
      "type": "string",
      "minLength": 1
    },
    "selection_range": {
      "type": "object",
      "additionalProperties": false,
      "required": ["start", "end"],
      "properties": {
        "start": {
          "$ref": "#/$defs/position"
        },
        "end": {
          "$ref": "#/$defs/position"
        }
      }
    }
  },
  "$defs": {
    "position": {
      "type": "object",
      "additionalProperties": false,
      "required": ["line", "character"],
      "properties": {
        "line": {
          "type": "integer",
          "minimum": 0
        },
        "character": {
          "type": "integer",
          "minimum": 0
        }
      }
    }
  }
}
