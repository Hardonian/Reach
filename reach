#!/usr/bin/env bash
set -euo pipefail

cmd="${1:-}"
case "$cmd" in
  doctor)
    shift
    (cd tools/doctor && go run . "$@")
    ;;
  release-check)
    shift
    ./tools/release-check.sh "$@"
    ;;
  federation)
    shift
    (cd services/runner && go run ./cmd/reachctl federation "$@")
    ;;
  support)
    shift
    (cd services/runner && go run ./cmd/reachctl support "$@")
    ;;
  arcade)
    shift
    (cd services/runner && go run ./cmd/reachctl arcade "$@")
    ;;
  *)
    echo "usage: reach doctor|release-check|federation|support|arcade" >&2
    exit 1
    ;;
esac
