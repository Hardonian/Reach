{
  "name": "@reach/decision-engine-monorepo",
  "version": "0.3.1",
  "private": true,
  "description": "Decision engine monorepo with Rust core and TypeScript wrapper",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "echo 'Build handled by individual language compilers'",
    "docs:dev": "cd apps/docs && pnpm dev",
    "docs:build": "cd apps/docs && pnpm build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "lint:structure": "node scripts/guard-structure.mjs",
    "typecheck": "tsc --noEmit && npm run typecheck --workspaces --if-present",
    "governance:demo": "node --import tsx/esm scripts/governance-demo.ts",
    "validate:oss-purity": "node scripts/validate-oss-purity.mjs",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docs:check": "node --import tsx/esm tools/docs/drift/run.ts",
    "docs:index:check": "node --import tsx/esm scripts/validate-docs-index.ts",
    "health:check": "node --import tsx/esm scripts/repo-health.ts",
    "gates:reality": "node --import tsx/esm scripts/check-v0.1-gates.ts",
    "gates:terminology": "node --import tsx/esm scripts/check-terminology.ts",
    "verify:boundaries": "node scripts/verify-boundaries.mjs",
    "verify:oss": "node scripts/verify-oss.mjs",
    "verify:routes": "node scripts/verify-routes.mjs",
    "verify:determinism": "node --import tsx/esm scripts/verify-determinism.ts",
    "verify:fast": "npm run typecheck && npm run lint:structure && npm run format:check && npm run docs:index:check && npm run health:check && npm run gates:reality && npm run gates:terminology && npm test",
    "verify": "npm run verify:fast && npm run verify:oss && npm run verify:routes && npm run verify:determinism && npm run build",
    "verify:full": "npm run verify"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^10.0.1",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.0"
  },
  "engines": {
    "node": ">=20.9.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reach/decision-engine.git"
  },
  "license": "MIT",
  "overrides": {
    "minimatch": "^10.2.2"
  }
}
