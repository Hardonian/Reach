{
  "name": "@reach/decision-engine-monorepo",
  "version": "0.3.1",
  "private": true,
  "description": "Decision engine monorepo with Rust core and TypeScript wrapper",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "echo 'Build handled by individual language compilers'",
    "test": "vitest run src",
    "test:watch": "vitest src",
    "test:system": "vitest run test/integration",
    "test:system:watch": "vitest test/integration",
    "test:integration": "vitest run test/integration",
    "test:all": "vitest run src test/integration",
    "lint": "eslint src",
    "lint:structure": "powershell ./tools/guard-structure.ps1",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docs:check": "npx tsx tools/docs/drift/run.ts",
    "docs:index:check": "npx tsx scripts/validate-docs-index.ts",
    "health:check": "npx tsx scripts/repo-health.ts",
    "verify:fast": "npm run typecheck && npm run lint:structure && npm run format:check && npm run docs:index:check && npm run validate:language && npm run validate:boundaries && npm run health:check && npm test",
    "verify": "npm run lint && npm run typecheck && npm run test && npm run build && npm run smoke:m1 && npm run boundary:lint",
    "verify:full": "npm run verify",
    "ci": "npm run typecheck && npm test && npm run test:system",
    "validate:boundaries": "npx tsx scripts/validate-import-boundaries.ts",
    "validate:language": "npx tsx scripts/validate-canonical-language.ts",
    "boundary:lint": "npx tsx scripts/validate-boundary-dominance.ts",
    "smoke:m1": "bash scripts/smoke-test.sh",
    "validate:packs": "bash scripts/validate-packs.sh",
    "validate:oss-purity": "npm run validate:boundaries",
    "verify:oss": "npm run validate:language && npm run validate:intent && npm run validate:semantic && npm run validate:dgl && npm run validate:boundaries && npm run validate:oss-purity && npm run validate:site-claims && npm run validate:site-boundaries && npm run validate:engines && npm run validate:packs && npm run validate:sccl",
    "validate:engines": "node scripts/validate-node-engines.js",
    "validate:site-claims": "npx tsx scripts/validate-site-claims.ts",
    "validate:site-boundaries": "npx tsx scripts/enforce-site-boundaries.ts",
    "validate:intent": "npx tsx scripts/dgl-gate.ts intent && npx tsx scripts/dgl-gate.ts gate",
    "validate:semantic": "npx tsx scripts/dgl-gate.ts scan",
    "validate:dgl": "npx tsx scripts/dgl-gate.ts gate",
    "reach:dgl:scan": "npx tsx scripts/dgl-gate.ts scan",
    "reach:dgl:report": "npx tsx scripts/dgl-gate.ts report",
    "reach:dgl:baseline": "npx tsx scripts/dgl-gate.ts baseline --intent",
    "reach:dgl:gate": "npx tsx scripts/dgl-gate.ts gate",
    "reach:dgl:provider-matrix": "npx tsx scripts/dgl-gate.ts provider-matrix",
    "reach:dgl:route": "npx tsx scripts/dgl-gate.ts route --task-class bugfix --subsystem core",
    "readylayer:gates:dgl": "npm run validate:language && npm run validate:intent && npm run validate:semantic && npm run validate:dgl",
    "reach:dgl:openapi": "npx tsx scripts/dgl-gate.ts openapi",
    "reach:dgl:doctor": "npx tsx scripts/dgl-gate.ts doctor",
    "reach:run:show": "npx tsx scripts/dgl-gate.ts run-show",
    "reach:run:list": "npx tsx scripts/dgl-gate.ts run-list",
    "reach:run:export": "npx tsx scripts/dgl-gate.ts run-export",
    "test:routes": "vitest run src/dgl/routes-integration.test.ts",
    "reach:dgl:context": "npx tsx scripts/dgl-gate.ts context",
    "reach:dgl:economics": "npx tsx scripts/dgl-gate.ts economics",
    "reach:agent:validate": "npx tsx scripts/dgl-gate.ts agent-validate dgl/fixtures/agent-contract.valid.json",
    "reach:cpx:pack": "npx tsx scripts/cpx-cli.ts pack",
    "reach:cpx:validate-pack": "npx tsx scripts/cpx-cli.ts validate-pack",
    "reach:cpx:run": "npx tsx scripts/cpx-cli.ts run",
    "reach:cpx:report": "npx tsx scripts/cpx-cli.ts report",
    "smoke:cpx": "npx tsx scripts/smoke-cpx.ts",
    "validate:sccl": "npx tsx scripts/sccl-cli.ts gate",
    "smoke:sccl": "npx tsx scripts/smoke-sccl.ts",
    "verify:types": "npm run typecheck",
    "verify:lint": "npm run lint",
    "reach:cpx:resolve": "npx tsx scripts/cpx-cli.ts resolve"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.3",
    "@types/node": "^25.3.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^9.39.3",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0 <23.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reach/decision-engine.git"
  },
  "license": "MIT",
  "dependencies": {
    "zod": "^4.3.6"
  }
}
