# =============================================================================
# Reach Environment Variables Configuration
# =============================================================================
# This file documents all environment variables used by the Reach application.
# Copy this file to .env and fill in the appropriate values for your environment.
#
# Variables are marked as REQUIRED or OPTIONAL:
# - REQUIRED: Must be set for the application to function properly
# - OPTIONAL: Has sensible defaults if not provided
#
# Production Requirements:
# - STRIPE_SECRET_KEY, STRIPE_WEBHOOK_SECRET, and GITHUB_WEBHOOK_SECRET are
#   required in production environments (NODE_ENV=production)
# =============================================================================

# =============================================================================
# SECTION: Base Configuration
# =============================================================================

# REQUIRED: Node environment - must be "development", "test", or "production"
# Default: "development"
NODE_ENV=development

# =============================================================================
# SECTION: Reach Cloud Features
# =============================================================================

# OPTIONAL: Enable Reach Cloud features (true/false)
# Set to "true" to enable cloud-specific functionality
# REACH_CLOUD_ENABLED=true

# OPTIONAL: Base64-encoded encryption key for cloud data encryption
# Required if REACH_CLOUD_ENABLED is true
# Generate with: openssl rand -base64 32
# REACH_ENCRYPTION_KEY_BASE64=

# OPTIONAL: Path to cloud database (local file path or remote URL)
# Only used when REACH_CLOUD_ENABLED is true
# CLOUD_DB_PATH=./data/cloud.db

# =============================================================================
# SECTION: Authentication & Session
# =============================================================================

# OPTIONAL: Name of the session cookie
# Default: "reach_session"
# REACH_SESSION_COOKIE_NAME=reach_session

# OPTIONAL: Session time-to-live in hours
# Default: 24
# REACH_SESSION_TTL_HOURS=24

# =============================================================================
# SECTION: Redis (Rate Limiting)
# =============================================================================

# OPTIONAL: Redis connection URL for rate limiting
# Format: redis://[username:]password@host:port[/database]
# Example: redis://localhost:6379
# REDIS_URL=redis://localhost:6379

# =============================================================================
# SECTION: Billing (Stripe)
# =============================================================================

# OPTIONAL: Enable billing features (true/false)
# Set to "true" to enable Stripe payment processing
# BILLING_ENABLED=true

# REQUIRED in production: Stripe secret key
# Get from: https://dashboard.stripe.com/apikeys
# Format: sk_test_... or sk_live_...
# STRIPE_SECRET_KEY=

# REQUIRED in production: Stripe webhook secret
# Get from: https://dashboard.stripe.com/webhooks
# Format: whsec_...
# STRIPE_WEBHOOK_SECRET=

# OPTIONAL: Stripe publishable key (client-side)
# Get from: https://dashboard.stripe.com/apikeys
# Format: pk_test_... or pk_live_...
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# OPTIONAL: Stripe price IDs for subscription plans
# Get from: https://dashboard.stripe.com/products
# STRIPE_PRICE_PRO=price_...
# STRIPE_PRICE_TEAM=price_...
# STRIPE_PRICE_ENTERPRISE=price_...

# =============================================================================
# SECTION: GitHub Integration
# =============================================================================

# OPTIONAL: GitHub OAuth application client ID
# Get from: https://github.com/settings/developers
# GITHUB_CLIENT_ID=

# OPTIONAL: GitHub OAuth application client secret
# Get from: https://github.com/settings/developers
# GITHUB_CLIENT_SECRET=

# OPTIONAL: GitHub OAuth redirect URL
# Must match what's configured in your GitHub OAuth app
# GITHUB_REDIRECT_URL=http://localhost:3000/api/auth/github/callback

# REQUIRED in production: GitHub webhook secret
# Get from: https://github.com/your-org/your-repo/settings/hooks
# Format: webhook secret you configured
# GITHUB_WEBHOOK_SECRET=

# OPTIONAL: GitHub App credentials (for enhanced GitHub integration)
# Get from: https://github.com/settings/apps
# GITHUB_APP_ID=

# OPTIONAL: GitHub App private key (PEM format)
# Download from GitHub App settings
# Must be base64 encoded if setting via environment variable
# GITHUB_APP_PRIVATE_KEY=

# =============================================================================
# SECTION: ReadyLayer (Policy & Governance)
# =============================================================================

# OPTIONAL: ReadyLayer API base URL
# Required if using ReadyLayer policy features
# READYLAYER_BASE_URL=https://api.readylayer.com

# OPTIONAL: ReadyLayer alert email endpoint
# For sending policy violation alerts via email
# READYLAYER_ALERT_EMAIL_ENDPOINT=https://api.readylayer.com/alerts/email

# OPTIONAL: ReadyLayer alert email API key
# READYLAYER_ALERT_EMAIL_API_KEY=

# OPTIONAL: ReadyLayer alert sender email address
# Must be a valid email address
# READYLAYER_ALERT_EMAIL_FROM=alerts@yourcompany.com

# OPTIONAL: Alert deduplication window in seconds
# Default: 300 (5 minutes)
# READYLAYER_ALERT_DEDUPE_WINDOW_SECONDS=300

# OPTIONAL: Enable ReadyLayer strict mode (true/false)
# When enabled, policy violations will block operations
# READYLAYER_STRICT_MODE=false

# OPTIONAL: Block operations when gate warnings threshold is reached (true/false)
# READYLAYER_GATE_WARNINGS_BLOCK=false

# OPTIONAL: Maximum number of warnings before blocking
# Default: 25
# READYLAYER_GATE_MAX_WARNINGS=25

# =============================================================================
# SECTION: SMTP (Email)
# =============================================================================

# OPTIONAL: SMTP server hostname
# Example: smtp.sendgrid.net, smtp.gmail.com
# SMTP_HOST=

# OPTIONAL: SMTP server port
# Default: 587 (submission) | Common: 25, 465 (SSL), 587 (TLS)
# SMTP_PORT=587

# OPTIONAL: SMTP username
# SMTP_USER=

# OPTIONAL: SMTP password or API key
# SMTP_PASS=

# =============================================================================
# SECTION: Application URLs
# =============================================================================

# OPTIONAL: Base URL of the application
# Used for generating absolute URLs in emails, links, etc.
# NEXT_PUBLIC_BASE_URL=http://localhost:3000

# OPTIONAL: App-specific URL (may differ from BASE_URL for multi-app setups)
# NEXT_PUBLIC_APP_URL=http://localhost:3000

# OPTIONAL: Brand name displayed in the application UI
# NEXT_PUBLIC_BRAND_NAME=Reach

# =============================================================================
# SECTION: Runner & Execution
# =============================================================================

# OPTIONAL: URL of the Reach Runner service
# Used for executing code in isolated environments
# Format: https://runner.yourcompany.com
# REACH_RUNNER_URL=

# OPTIONAL: Decision engine endpoint
# Used for AI-driven policy decisions
# DECISION_ENGINE=https://api.yourcompany.com/decisions

# =============================================================================
# SECTION: Enterprise Policy
# =============================================================================

# OPTIONAL: Maximum spawn depth for enterprise tier
# Controls nested execution depth for security
# Default: 4
# REACH_ENTERPRISE_MAX_SPAWN_DEPTH=4
