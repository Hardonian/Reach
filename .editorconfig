# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 100

[*.{go,mod}]
indent_style = tab
indent_size = 4

[*.rs]
indent_size = 4

[*.{md,mdx}]
trim_trailing_whitespace = false
max_line_length = 80

[Makefile]
indent_style = tab

[*.json]
indent_size = 2
insert_final_newline = true

[*.{yml,yaml}]
indent_size = 2

[*.py]
indent_size = 4
max_line_length = 88
