{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "../..",
    "paths": {
      "@zeo/*": [
        "packages/*/dist",
        "packages/*/src/index.ts",
        "packages/*/src"
      ],
      "@prisma/client": ["packages/db/src/prisma-client.d.ts"]
    },
    "emitDeclarationOnly": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
