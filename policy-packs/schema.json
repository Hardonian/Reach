{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://reach.sh/policy-schema.json",
  "title": "Reach Policy Schema",
  "description": "Schema for Reach policy pack definitions",
  "type": "object",
  "required": ["id", "version", "type", "severity", "rules"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "id": {
      "type": "string",
      "description": "Unique policy identifier",
      "pattern": "^[a-z0-9-]+$"
    },
    "version": {
      "type": "string",
      "description": "Semantic version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "type": {
      "type": "string",
      "enum": ["infrastructure", "cost", "security", "quality", "compliance"],
      "description": "Policy category"
    },
    "severity": {
      "type": "string",
      "enum": ["blocking", "warning", "advisory"],
      "description": "Policy enforcement level"
    },
    "description": {
      "type": "string",
      "description": "Human-readable policy description"
    },
    "rules": {
      "type": "array",
      "description": "Policy rules to evaluate",
      "items": {
        "type": "object",
        "required": ["name", "condition", "message"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Rule identifier"
          },
          "condition": {
            "type": "object",
            "description": "Rule evaluation condition"
          },
          "message": {
            "type": "string",
            "description": "Message on rule violation"
          },
          "suggestion": {
            "type": "string",
            "description": "Remediation suggestion"
          }
        }
      }
    },
    "config": {
      "type": "object",
      "description": "Configurable policy parameters",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["string", "number", "boolean"]
          },
          "default": {},
          "description": {
            "type": "string"
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "author": {
          "type": "string"
        },
        "category": {
          "type": "string"
        },
        "applies_to": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
