{
  "name": "reach-vscode",
  "displayName": "Reach IDE Bridge",
  "description": "VS Code extension for synchronizing context and applying patches from Reach IDE Bridge",
  "version": "0.2.0",
  "publisher": "reach",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "reach.start",
        "title": "Reach: Start Bridge Connection"
      },
      {
        "command": "reach.openPanel",
        "title": "Reach: Open Bridge Panel"
      },
      {
        "command": "reach.joinSession",
        "title": "Reach: Join Collaborative Session"
      },
      {
        "command": "reach.sendSelection",
        "title": "Reach: Send Selection to Bridge"
      },
      {
        "command": "reach.listConnectors",
        "title": "Reach: List Connectors"
      },
      {
        "command": "reach.marketplaceSearch",
        "title": "Reach: Marketplace Search"
      },
      {
        "command": "reach.marketplaceInstall",
        "title": "Reach: Install Connector/Template/Policy"
      },
      {
        "command": "reach.marketplaceListInstalled",
        "title": "Reach: List Installed"
      },
      {
        "command": "reach.marketplaceUpdateInstalled",
        "title": "Reach: Update Installed"
      }
    ],
    "configuration": {
      "title": "Reach",
      "properties": {
        "reach.bridgeUrl": {
          "type": "string",
          "default": "ws://localhost:8787",
          "description": "WebSocket endpoint for Reach IDE Bridge"
        },
        "reach.connectorRegistryUrl": {
          "type": "string",
          "default": "http://localhost:8092",
          "description": "HTTP endpoint for Reach connector registry service"
        }
      }
    }
  },
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc -w -p .",
    "lint": "eslint src",
    "test": "vitest run"
  },
  "engines": {
    "node": ">=18.0.0 <23.0.0",
    "vscode": "^1.90.0"
  },
  "overrides": {
    "clawdbot": "npm:@reach/empty@1.0.0",
    "codex": "npm:@reach/empty@1.0.0",
    "connect": "npm:@reach/empty@1.0.0",
    "request": "npm:@reach/empty@1.0.0",
    "marked": "npm:@reach/empty@1.0.0",
    "tar": "^7.0.0",
    "hono": "npm:@reach/empty@1.0.0",
    "node-llama-cpp": "npm:@reach/empty@1.0.0",
    "minimatch": "^10.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.16.1",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "eslint": "^9.15.0",
    "typescript": "^5.6.3",
    "vitest": "^4.0.0"
  },
  "dependencies": {
    "ws": "^8.18.1"
  }
}
